
<% @laps.each do |lap| %>
	<div class="card bg-light pb-4">
	  <div class="card-body lead text-primary index-card">
		<span>Simulator: <%= lap.simulator.name %></span>
		<span>Track: <%= lap.track.name %></span>
		<span>Car: <%= lap.car.name %></span>
		<span>LapTime: <%= lap.formated_time(lap.time).first %></span>
		<span>Settings: <%= lap.setting %></span>
		<span>Hardware: <%= lap.hardware %></span>
		<span>Notes: <%= lap.notes %></span>
		<p></p>
		<p>
			<%= link_to 'Edit', edit_lap_path(lap),  class: "btn btn-sm btn-primary" %>
			<%= link_to 'Show', lap_path(lap),  class: "btn btn-sm btn-primary" %>
			<%= link_to 'Delete', lap_path(lap), method: :delete, 
				data: { confirm: "Are you sure?" },  class: "btn btn-sm btn-primary" %>
		</p>
		<br />
		<p></p>
	  </div>
	</div>
<% end %>
